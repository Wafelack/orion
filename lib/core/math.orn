(load "core/bool.orn")
(enum Ordering
      Less
      Equal
      Greater)

(def cmp (lambda (lhs rhs)
                 (match (_cmp lhs rhs)
                        (0 Less)
                        (1 Equal)
                        (2 Greater))))

(def < (lambda (lhs rhs)
               (= (cmp lhs rhs) Less)))

(def > (lambda (lhs rhs)
               (= (cmp lhs rhs) Greater)))

(def >= (lambda (lhs rhs)
                (or (> lhs rhs) (= lhs rhs))))

(def <= (lambda (lhs rhs)
                (or (< lhs rhs) (= lhs rhs))))

(def % (Î» (lhs rhs)
         (- lhs (* rhs (/ lhs rhs)))))
